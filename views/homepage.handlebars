<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <h1>{{title}}</h1>
        <p>{{post_text}}</p>
      </div>
      <div class="meta">
        by
        {{user.username}}
        on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>